{
  "manifest_version": 3,
  "name": "高亮“广告”",
  "version": "1.0.1",
  "locale": "zh-CN",
  "description": "在指定的网址上高亮“广告”二字",
  "icons": {
    "128": "icons/hade128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://cn.bing.com/*",
        "https://www.baidu.com/*"
      ], 
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
