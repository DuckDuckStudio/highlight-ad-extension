{
  "manifest_version": 3,
  "name": "[Community] 高亮“广告” + 高亮多词",
  "version": "1.0.2",
  "default_locale": "zh",
  "description": "高亮“广告”扩展的社区扩展，添加了高亮多个字段的功能。",
  "icons": {
    "128": "icons/hade128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://cn.bing.com/*",
        "https://www.baidu.com/*",
        "https://www.so.com/*",
        "https://www.sogou.com/*",
        "https://www.zhihu.com/*"
      ], 
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
